@model CrudWeb.Models.Movimentacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Movimentação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Conteiner_Id" class="control-label"></label>
                <input asp-for="Conteiner_Id" class="form-control" maxlength="11" />
                <span asp-validation-for="Conteiner_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Procedimento" class="control-label"></label>
                <select asp-for="Procedimento" class="form-select">
                    <option selected>Escolha</option>
                    <option value="Embarque">Embarque</option>
                    <option value="Descarga">Descarga</option>
                    <option value="Gate In">Gate In</option>
                    <option value="Gate Out">Gate Out</option>
                    <option value="Reposicionamento">Reposicionamento</option>
                    <option value="Pesagem">Pesagem</option>
                    <option value="Scanner">Scanner</option>
                </select>
                <span asp-validation-for="Procedimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DH_Iniciais" class="control-label"></label>
                <input type="datetime-local" asp-for="DH_Iniciais" class="form-control" />
                <span asp-validation-for="DH_Iniciais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DH_Finais" class="control-label"></label>
                <input type="datetime-local" asp-for="DH_Finais" class="form-control" />
                <span asp-validation-for="DH_Finais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a role="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
