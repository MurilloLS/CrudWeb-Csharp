@model IEnumerable<CrudWeb.Models.Movimentacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Movimentações</h1>

<p>
    <a role="button" class="btn btn-primary" asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Conteiner_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DH_Iniciais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DH_Finais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Conteiner_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DH_Iniciais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DH_Finais)
            </td>
            <td>
                <a role="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a role="button" class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a role="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
